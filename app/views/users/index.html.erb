 <div class="container px-5 px-sm-0">
  <div class="row">
   <%= render 'books/new', book: @book, user: @user %>
   <div class="col-md-8 offset-md-1">
    <%#= render 'books/new', book: @book, user: @user %>
     <% if @book.errors.any? %>
         <%= @book.errors.count %>件のエラーが発生しました
          <ul>
           <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
           <% end %>
          </ul>
      <% end %>
     <table class="table table-hover table-inverse">
      <!--<div class="col-md-8 offset-md-1">-->
        <h2>Users</h2>
         <table class="table">
            
           <tr>
                <th>image</th>
                <th>name</th>
                <th></th>
           </tr>
           <% @users.each do |user| %>
           <tr>
             <td><%= image_tag user.get_profile_image(100,100) %></td>
             <td><%= user.name %></td>
             <td><%= link_to user_path(user.id) %></td>
           </tr>
            <% end %>
         </table>
        </div>
      </div>
    </div>
  </div>