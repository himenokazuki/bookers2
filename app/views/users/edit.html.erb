<h2>User info</h2>
<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <input class="form-control name" type="text" value="himenokazuki" name="user[name]" id="user_name">
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*" %>
  <%= f.submit "変更を保存" %>
 
 <div class="form-group">
<textarea class="form-control introduction" name="user[introduction]" id="user_introduction"> </textarea>
</div>
<input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
<% end %>